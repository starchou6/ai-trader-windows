<Window x:Class="AITrade.ApiImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Api Info" Height="300" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <Label Content="Enter your Binance api key:" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="Key" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <Label Content="Enter your Binance api secret:" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="Secret" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <Label Content="Enter your DeepSeek api key:" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="AiKey" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" />
            <Button Content="Import" Width="75" Margin="5" Click="ImportButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
