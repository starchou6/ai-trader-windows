<Window x:Class="AITrader.Views.TraderSettingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding MenuItem.TraderSettingTitle}" Height="650" Width="800">
    <StackPanel Margin="10">
        <!-- Strategy Selection Area -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="{Binding MenuItem.LblStrategySelect}" VerticalAlignment="Center"/>
            <ComboBox x:Name="StrategyComboBox" Width="180" VerticalAlignment="Center" SelectionChanged="StrategyComboBox_SelectionChanged"/>
            <Label Content="{Binding MenuItem.LblStrategyName}" VerticalAlignment="Center" Margin="15,0,0,0"/>
            <TextBox x:Name="StrategyNameTextBox" Width="120" VerticalAlignment="Center"/>
            <Button x:Name="SaveStrategyButton" Content="{Binding MenuItem.BtnSaveStrategy}" Margin="10,0,0,0" Padding="8,2" Click="SaveStrategy_Click"/>
            <Button x:Name="DeleteStrategyButton" Content="{Binding MenuItem.BtnDeleteStrategy}" Margin="10,0,0,0" Padding="8,2" Click="DeleteStrategy_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Margin="4,0,0,0" Content="{Binding MenuItem.LblPeriod}" />
            <TextBox Name="ScanInterval" Width="30" VerticalAlignment="Center"/>
            <Label Margin="4,0,0,0" Content="{Binding MenuItem.LblPeriodUnit}" />
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <!-- 已选币种 -->
            <StackPanel Grid.Column="0">
                <Label Content="{Binding MenuItem.LblSelectedCoins}" HorizontalAlignment="Center"/>
                <ListBox x:Name="SelectedCoinsListBox" Height="200" SelectionMode="Extended" SelectionChanged="SelectedCoinsListBox_SelectionChanged"/>
            </StackPanel>
            <!-- 箭头按钮 -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Button x:Name="AddButton" Content="←" Width="40" Margin="0,5" Click="AddCoin_Click" IsEnabled="False"/>
                <Button x:Name="RemoveButton" Content="→" Width="40" Margin="0,5" Click="RemoveCoin_Click" IsEnabled="False"/>
            </StackPanel>
            <!-- 可用币种 -->
            <StackPanel Grid.Column="2">
                <Label Content="{Binding MenuItem.LblAvailableCoins}" HorizontalAlignment="Center"/>
                <ListBox x:Name="AvailableCoinsListBox" Height="200" SelectionMode="Extended" SelectionChanged="AvailableCoinsListBox_SelectionChanged"/>
            </StackPanel>
        </Grid>
        <!-- 系统提示词编辑区域 -->
        <StackPanel Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding MenuItem.LblSystemPrompt}" />
                <Button x:Name="ResetPromptButton" Content="{Binding MenuItem.BtnResetPrompt}" Margin="10,0,0,0" Padding="10,2" Click="ResetPromptButton_Click" />
            </StackPanel>
            <TextBox x:Name="CustomPromptTextBox" Height="150" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,5,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="{Binding MenuItem.BtnCancel}" Width="75" Margin="5" Click="CancelButton_Click" />
            <Button Content="{Binding MenuItem.BtnImport}" Width="75" Margin="5" Click="ImportButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
