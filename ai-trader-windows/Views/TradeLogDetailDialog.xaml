<Window x:Class="AITrader.Views.TradeLogDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dialogs="clr-namespace:AITrade.ViewModels.Dialogs"
        Title="{Binding MenuItem.TradeLogDetailTitle}" Height="700" Width="900"
        WindowStartupLocation="CenterOwner">
    <Window.DataContext>
        <dialogs:TradeLogDetailDialogViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title / Basic Info -->
        <TextBlock Grid.Row="0" Text="{Binding Record.Title}" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

        <!-- Decisions DataGrid -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="{Binding MenuItem.LblDecisions}" FontWeight="Bold"/>
            <DataGrid ItemsSource="{Binding Record.Decisions}" AutoGenerateColumns="True" CanUserAddRows="False" MaxHeight="120" IsReadOnly="True"/>
        </StackPanel>

        <!-- CoT Trace and Input Prompt in TabControl -->
        <TabControl Grid.Row="2">
            <TabItem Header="{Binding MenuItem.LblInputPrompt}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                    <TextBlock Text="{Binding Record.InputPrompt}" TextWrapping="Wrap"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{Binding MenuItem.LblCoTTrace}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                    <TextBlock Text="{Binding Record.CoTTrace}" TextWrapping="Wrap"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
