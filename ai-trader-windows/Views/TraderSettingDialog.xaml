<Window x:Class="AITrader.Views.TraderSettingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AITrader.Views"
        mc:Ignorable="d"
        Title="TraderSettingDialog" Height="450" Width="800">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <Label Margin="4,0,0,0" Content="AI Trader Period" />
            <TextBox Name="ScanInterval" Width="30" VerticalAlignment="Center"/>
            <Label Margin="4,0,0,0" Content="Seconds" />
        </StackPanel>
        <!--<Label Content="Enter your Binance api key:" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="Key" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <Label Content="Enter your Binance api secret:" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="Secret" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <Label Content="Enter your DeepSeek api key:" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="AiKey" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" />
            <Button Content="Import" Width="75" Margin="5" Click="ImportButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
